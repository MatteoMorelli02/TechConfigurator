<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>

<!-- Questo Pane Ã¨ il contenitore principale per gli elementi dell'interfaccia utente -->
<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unicam.cs.mgc.TechConfigurator.view.PaginaInizialeController">

   <children>
      <!-- Label che mostra il titolo "TECH CONFIGURATOR" -->
      <!-- Posizionato al centro e in grassetto -->
      <Label layoutX="170.0" layoutY="121.0" prefHeight="79.0" prefWidth="260.0"
             style="-fx-font-size: 24px; -fx-font-weight: bold;"
             text="TECH CONFIGURATOR" />

      <!-- Button per iniziare la configurazione -->
      <!-- fx:id="bottoneStart" permette al controller di gestire le interazioni -->
      <!-- onAction="#handleStart" collega il pulsante al metodo handleStart nel controller -->
      <Button fx:id="bottoneStart" layoutX="227.0" layoutY="258.0" mnemonicParsing="false"
              text="INIZIA CONFIGURAZIONE" onAction="#iniziaConfigurazione" />
   </children>
</Pane>
